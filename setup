#!/bin/sh
ln -sf "$PWD/zshrc" "$HOME/.zshrc"

mkdir -p "$HOME/bin" || true
ln -sf "$PWD/bin/"* "$HOME/bin"

mkdir -p "$HOME/lib" || true
ln -sf "$PWD/lib/"* "$HOME/lib"

# Call subsequent setup scripts for other configurations
for i in vim; do
    cd $i && ./setup
    cd -
done

chsh -s $(which zsh)
